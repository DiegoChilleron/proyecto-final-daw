generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enums

enum Role {
  Admin
  User
}

enum TemplateType {
  corporate // Web corporativa
  portfolio // Portfolio personal
  ecommerce // Tienda online básica
}

enum DeploymentStatus {
  pending // Pendiente
  deployed // Desplegado correctamente
  failed // Error en el proceso
}

// Models

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  products Product[]
}

// Producto = Plantilla de web
model Product {
  id           String       @id @default(uuid())
  title        String
  description  String
  price        Float        @default(0)
  slug         String       @unique
  tags         String[]     @default([])
  templateType TemplateType

  // Características de la plantilla
  features String[] @default([]) // Características: responsive, SEO, etc.

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  productImages ProductImage[]
  orderItems    OrderItem[]

  @@index([templateType])
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  url       String
  product   Product @relation(fields: [productId], references: [id])
  productId String
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  password      String? // Opcional: no todos los usuarios tienen password (OAuth)
  role          Role      @default(User)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  address UserAddress?
  orders  Order[]

  @@map("user")
}

model Country {
  id             String         @id
  name           String         @unique
  UserAddress    UserAddress[]
  orderAddresses OrderAddress[]
}

model UserAddress {
  id         String  @id @default(uuid())
  firstName  String
  lastName   String
  address    String
  address2   String?
  postalCode String
  phone      String
  city       String

  country   Country @relation(fields: [countryId], references: [id])
  countryId String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  @@map("address")
}

// Orden de compra

model Order {
  id           String    @id @default(uuid())
  subTotal     Float
  tax          Float
  total        Float
  itemsInOrder Int
  isPaid       Boolean   @default(false)
  paidAt       DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  userId       String
  orderItems   OrderItem[]
  orderAddress OrderAddress?

  transactionId String?
}

model OrderItem {
  id       String @id @default(uuid())
  quantity Int    @default(1)
  price    Float

  // Configuración del cliente para esta web (datos del formulario)
  siteConfig Json // Datos del formulario: nombre empresa, colores, textos, etc.

  // Estado del despliegue
  deploymentStatus DeploymentStatus @default(pending)
  deploymentUrl    String? // URL final del sitio desplegado
  subdomain        String?          @unique // Subdominio/directorio único en S3

  deployedAt DateTime?

  order   Order  @relation(fields: [orderId], references: [id])
  orderId String

  product   Product @relation(fields: [productId], references: [id])
  productId String
}

model OrderAddress {
  id         String  @id @default(uuid())
  firstName  String
  lastName   String
  address    String
  address2   String?
  postalCode String
  city       String
  phone      String

  country   Country @relation(fields: [countryId], references: [id])
  countryId String

  order   Order  @relation(fields: [orderId], references: [id])
  orderId String @unique

  @@map("order_address")
}

// Tablas de autenticación (BetterAuth)

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(uuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}
